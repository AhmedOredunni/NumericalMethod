import math

# ==========================================
# Convert user's input string to a function f(x)
# ==========================================
def get_function():
    eq = input("Enter the function f(x): ")
    def f(x):
        return eval(eq, {"x": x, "math": math})
    return f, eq

# Derivative using numerical differentiation
def derivative(f, x):
    h = 1e-6
    return (f(x + h) - f(x - h)) / (2*h)

# ==========================================
# Bisection Method
# ==========================================
def bisection(f, a, b, tol):
    print("\n--- Bisection Method ---")
    if f(a)*f(b) > 0:
        print("Invalid interval! f(a) and f(b) must have opposite signs.")
        return

    print(f"{'Iter':<6}{'a':<10}{'b':<10}{'c':<10}{'f(c)':<10}")
    iter_count = 1
    while abs(b - a) > tol:
        c = (a + b) / 2
        print(f"{iter_count:<6}{a:<10.6f}{b:<10.6f}{c:<10.6f}{f(c):<10.6f}")

        if f(c) == 0:
            break
        elif f(a)*f(c) < 0:
            b = c
        else:
            a = c
        iter_count += 1

    print(f"\nApproximate Root: {c:.6f}\n")

# ==========================================
# Newton-Raphson Method
# ==========================================
def newton_raphson(f, x0, tol, max_iter=20):
    print("\n--- Newton-Raphson Method ---")
    print(f"{'Iter':<6}{'x_n':<12}{'f(x_n)':<12}{'f\'(x_n)':<12}{'x_(n+1)':<12}")

    for i in range(1, max_iter+1):
        fx = f(x0)
        fpx = derivative(f, x0)

        if fpx == 0:
            print("Zero derivative! Cannot continue.")
            return

        x1 = x0 - fx / fpx

        print(f"{i:<6}{x0:<12.6f}{fx:<12.6f}{fpx:<12.6f}{x1:<12.6f}")

        if abs(x1 - x0) < tol:
            print(f"\nApproximate Root: {x1:.6f}\n")
            return

        x0 = x1

    print("\nDid not converge within the maximum number of iterations.\n")

# ==========================================
# Successive Approximation (Fixed Point)
# ==========================================
def successive_approx(g, x0, tol, max_iter=20):
    print("\n--- Successive Approximation Method ---")
    print(f"{'Iter':<6}{'x_n':<12}{'x_(n+1)':<12}{'Error':<12}")

    for i in range(1, max_iter+1):
        x1 = g(x0)
        error = abs(x1 - x0)

        print(f"{i:<6}{x0:<12.6f}{x1:<12.6f}{error:<12.6f}")

        if error < tol:
            print(f"\nApproximate Root: {x1:.6f}\n")
            return

        x0 = x1

    print("\nDid not converge within the maximum number of iterations.\n")

# ==========================================
# Main Menu
# ==========================================
def main():
    while True:
        print("\n========== NUMERICAL METHODS SOLVER ==========")
        print("1. Bisection Method")
        print("2. Newton-Raphson Method")
        print("3. Successive Approximation Method")
        print("4. Quit Program")

        choice = input("Enter your choice (1-4): ")

        if choice == '4':
            print("\nExiting program... Goodbye!\n")
            break

        # User supplies equation here
        f, eq = get_function()

        if choice == '1':
            a = float(input("Enter a: "))
            b = float(input("Enter b: "))
            tol = float(input("Enter tolerance (e.g., 0.001): "))
            bisection(f, a, b, tol)

        elif choice == '2':
            x0 = float(input("Enter initial guess x0: "))
            tol = float(input("Enter tolerance: "))
            newton_raphson(f, x0, tol)

        elif choice == '3':
            print("Enter g(x) for fixed point (example: (x**3 + 1)/5 )")
            g_str = input("g(x) = ")
            def g(x):
                return eval(g_str, {"x": x, "math": math})
            x0 = float(input("Enter initial guess x0: "))
            tol = float(input("Enter tolerance: "))
            successive_approx(g, x0, tol)

        else:
            print("Invalid choice! Try again.\n")

if __name__ == "__main__":
    main()
